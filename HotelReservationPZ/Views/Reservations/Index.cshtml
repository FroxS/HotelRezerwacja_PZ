@model IEnumerable<HotelReservation.Models.Reservation>


<div class="container mt-5">

    <section class="hotels mt-2">

        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto mb-4">
                    <div class="section-title text-center ">
                        <h3 class="top-c-sep">Rezerwacje</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="career-search mb-60">
                        <form class="career-form mb-60 bg-dark">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-3 my-3">
                                    <div class="input-group position-relative">
                                        <input type="text" class="form-control" placeholder="Szukaj" id="keywords">
                                    </div>
                                </div>

                                <div class="col-3 my-3 align-items-center d-flex justify-content-between">
                                    <button type="button" class="btn btn-lg btn-block btn-light btn-custom" id="contact-submit">
                                        Szukaj
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="filter-result">

                            @foreach (var item in Model)
                            {
                                <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                                    <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                                        <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                                            <img src="@Url.Content(item?.Rooms?.FirstOrDefault()?.MainImage?.Path)" />
                                        </div>
                                        <div class="job-content">
                                            <h5 class="text-center text-md-left">
                                                @Html.DisplayFor(modelItem => item.Numer)
                                            </h5>
                                            <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                                <li class="mr-md-12">
                                                    <i class="zmdi zmdi-pin mr-2"></i>
                                                    Cena: @Html.DisplayFor(modelItem => item.Total_Price) zł
                                                </li>
                                                
                                            </ul>
                                            <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                                <li class="mr-md-12">
                                                    <i class="zmdi zmdi-pin mr-2"></i>
                                                    Imię i nazwisko: @Html.DisplayFor(modelItem => item.Guest.First_Name) @Html.DisplayFor(modelItem => item.Guest.Last_Name)
                                                </li>

                                            </ul>
                                            

                                            <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                                <li class="mr-md-6">
                                                    <i class="zmdi zmdi-money mr-2"></i>
                                                    Od @Html.DisplayFor(modelItem => item.Start_Date)
                                                </li>
                                                <li class="mr-md-6">
                                                    <i class="zmdi zmdi-money mr-2"></i>
                                                    Do @Html.DisplayFor(modelItem => item.End_Date)
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="job-right my-4 flex-shrink-0">
                                        <a href="@Url.Action("Details", "Reservations", new { id = @Url.Content(item?.Id.ToString())})"
                                       class="btn d-block w-100 d-sm-inline-block btn-light">
                                            Szczegóły
                                        </a>
                                        <div class="container">
                                            <div class="row">
                                                
                                                <a href="@Url.Action("Delete", "Reservations", new { id = @Url.Content(item?.Id.ToString())})" class="col-12 btn btn-danger">
                                                    Usuń
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

</div>
