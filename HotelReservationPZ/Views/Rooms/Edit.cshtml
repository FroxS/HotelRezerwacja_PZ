@model HotelReservation.Models.Room

@{
    ViewData["Title"] = "Edycja";
}
<div class="container mt-5">
    <h1>Edytuj</h1>

    <h4>Pokój</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxQuantityOfPeople" class="control-label"></label>
                    <input asp-for="MaxQuantityOfPeople" class="form-control" />
                    <span asp-validation-for="MaxQuantityOfPeople" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>
                    <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HotlelId" class="control-label"></label>
                    <select asp-for="HotlelId" class="form-control" asp-items="ViewBag.Hotels"></select>
                    <span asp-validation-for="HotlelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Wróć</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
