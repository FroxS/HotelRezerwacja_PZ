@using System.Linq;
@model IEnumerable<HotelReservation.Core.ViewModels.HotelHomeListViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide vh-100 w-100" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item vh-100 w-100 active">
            <img class="w-100 vh-100" src="@Url.Content(ViewBag?.HotelsTop3[0]?.MainImage?.Path)" alt="...">
            <div class="hotel-card-info d-none d-md-block">
                <a href="@Url.Action("Index", "Rooms", new { hotel = @Url.Content(ViewBag?.HotelsTop3[0]?.Id.ToString())})">
                    <h5>@Html.Raw(ViewBag?.HotelsTop3[0].Name)</h5>

                </a>
                <p>@Html.Raw(ViewBag?.HotelsTop3[0].Description)</p>
            </div>
        </div>
        <div class="carousel-item vh-100 w-100">
            <img class="w-100 vh-100" src="@Url.Content(ViewBag?.HotelsTop3[1]?.MainImage?.Path)" alt="...">
            <div class="hotel-card-info d-none d-md-block ">
                <a href="@Url.Action("Index", "Rooms", new { hotel = @Url.Content(ViewBag?.HotelsTop3[1]?.Id.ToString())})">
                    <h5>@Html.Raw(ViewBag?.HotelsTop3[1].Name)</h5>

                </a>
                <p>@Html.Raw(ViewBag?.HotelsTop3[1].Description)</p>
            </div>
        </div>
        @*<div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content(ViewBag?.Hotels[2]?.MainImage?.Path)" alt="Third slide">
            </div>*@
    </div>
    <a class="carousel-control-prev bg-dark" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next bg-dark" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="separator"></div>

<div class="container">

    <section class="hotels">

        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto mb-4">
                    <div class="section-title text-center ">
                        <h3 class="top-c-sep">Nasz ofera hoteli</h3>
                        <p>
                            Wybierz hotel w którym chcesz zarezerowwać swój pokój
                        </p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="career-search mb-60">

                        <form class="career-form mb-60 bg-dark">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-3 my-3">
                                    <div class="input-group position-relative">
                                        <input type="text" class="form-control" placeholder="Szukaj" id="keywords">
                                    </div>
                                </div>

                                <div class="col-3  my-3 align-items-center">
                                    <button type="button" class="btn btn-lg btn-block btn-light btn-custom" id="contact-submit">
                                        Szukaj
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="filter-result">

                            @foreach (var item in Model)
                            {
                                <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                                    <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                                        <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                                            <img src="@Url.Content(item?.Image)" />
                                        </div>
                                        <div class="job-content">
                                            <h5 class="text-center text-md-left">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </h5>
                                            <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                                <li class="mr-md-4">
                                                    <i class="zmdi zmdi-pin mr-2"></i>
                                                    @Html.DisplayFor(modelItem => item.City)
                                                </li>
                                                <li class="mr-md-4">
                                                    <i class="zmdi zmdi-money mr-2"></i>
                                                    @Html.DisplayFor(modelItem => item.Category)
                                                </li>
                                                <li class="mr-md-4">
                                                    <i class="zmdi zmdi-money mr-2"></i>
                                                    @if (string.IsNullOrEmpty(item.Prices))
                                                    {
                                                        @Html.Raw("Brak pokoi")
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.Prices)
                                                    }

                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="job-right my-4 flex-shrink-0">
                                        <a href="@Url.Action("Index", "Rooms", new { hotel = @Url.Content(item?.Id.ToString())})" 
                                           class="btn d-block w-100 d-sm-inline-block btn-light">
                                            Szukaj pokój
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    
</div>


