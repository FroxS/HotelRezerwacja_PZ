@model HotelReservation.Core.ViewModels.HotelImageFormViewModel

<div class="container mt-5">

    <div class="row mt-5">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Nazwa</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Opis</label>
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Miejscowość</label>
                    <input asp-for="City" class="form-control" required />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Godziny zameldowania </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-1 d-flex align-items-center">
                                <label class="control-label ">Od </label>
                            </div>

                            <div class="col-md-5">
                                <div class="form-group d-flex align-items-center">
                                    <input asp-for="HoursCheckOutFrom" class="form-control" required>
                                    <span asp-validation-for="HoursCheckOutFrom" class="d-block text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-1 d-flex align-items-center">
                                <label class="control-label">Od </label>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group d-flex align-items-center">
                                    <input asp-for="HoursCheckOutTo" class="form-control" required>
                                    <span asp-validation-for="HoursCheckOutTo" class="d-block text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Godziny zameldowania </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-1 d-flex align-items-center">
                                <label class="control-label ">Od </label>
                            </div>

                            <div class="col-md-5">
                                <div class="form-group d-flex align-items-center">
                                    <input asp-for="HoursCheckInFrom" class="form-control" required>
                                    <span asp-validation-for="HoursCheckInFrom" class="d-block text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-1 d-flex align-items-center">
                                <label class="control-label">Od </label>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group d-flex align-items-center">
                                    <input asp-for="HoursCheckInTo" class="form-control" required>
                                    <span asp-validation-for="HoursCheckInTo" class="d-block text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>


                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> Aktywny
                    </label>
                </div>
                <div class="form-group">
                    <label class="control-label">Kategoria</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" required></select>
                </div>

                <div class="form-group">
                    <label asp-for="Images" class="control-label"></label>
                    <input asp-for="Images" class="form-control" multiple />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn bg-dark text-white" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Wróć</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
